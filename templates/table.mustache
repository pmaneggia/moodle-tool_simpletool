{{!
    @template tool_simpletool/namechangepage

    Moodle renders a simple table of module names with links and edit button

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
        {
         "headers" : ["heading1", "heading2", ...],
         "records" : [record1[item, item, ...], record2[item, item, ...], ...],
        }
}}

<div class="card">
  <div class="card-body">
    <h2 class="card-title">{{# str }} table_header, tool_simpletool {{/ str }}</h2>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            {{#headers}}
              <th>{{.}}</th>
            {{/headers}}
          </thead>
          <tbody>
            {{#rows}}
              <tr class="danger">
                <td>{{name}}</td>
                <td>{{title}}</td>
                <td>{{firstname}}</td>
                <td>{{lastname}}</td>
                <td>{{#shortentext}} 40, {{{submission}}} {{/shortentext}}</td>
              </tr>
            {{/rows}}
          </tbody>
        </table>
      </div>
  </div>
</div>